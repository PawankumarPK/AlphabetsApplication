<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161616"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_main_bg"
        android:padding="15dp"
        android:id="@+id/ListLayout"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:transitionName="imageTransition"
                    android:id="@+id/profile_image"
                    android:layout_weight="30"
                    android:src="@drawable/download"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:transitionName="nameTransition"

                        android:text="Alphabets Tutorial"
                        android:textColor="@color/colorPrimaryDark"
                        android:id="@+id/profile_name"

                        android:textSize="20dp"
                        android:layout_marginLeft="26dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You can learn all alphabets with sounds and images...! "
                        android:textSize="12dp"
                        android:id="@+id/profile_desc"
                        android:transitionName="descTransition"


                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="26dp"/>

                </LinearLayout>


            </LinearLayout>





        </LinearLayout>



    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on the card view to open descriptions..."
        android:textColor="#ffffff"
        android:layout_marginTop="410dp"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>